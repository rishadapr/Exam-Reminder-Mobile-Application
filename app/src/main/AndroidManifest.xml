<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobileapptaylors.example.vegnish.MAD_assignment1">
    <!--wake lock so the phone can be activated-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!--the permision to listen the boot-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--receiver called when the alarm is executed-->
        <receiver android:name="mobileapptaylors.example.vegnish.MAD_assignment1.AlarmBroadcaster" />
        <service
            android:name="mobileapptaylors.example.vegnish.MAD_assignment1.NotificationTrigger"
            android:exported="false" />
        <receiver
            android:name="mobileapptaylors.example.vegnish.MAD_assignment1.DeviceBootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- <activity android:name=".MainActivity"></activity> -->
        <activity android:name="mobileapptaylors.example.vegnish.MAD_assignment1.ViewSlots" />
        <activity
            android:name="mobileapptaylors.example.vegnish.MAD_assignment1.Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="mobileapptaylors.example.vegnish.MAD_assignment1.AddSlots" />

        <!--<activity android:name=".HistorySlots" />-->

        <activity android:name="mobileapptaylors.example.vegnish.MAD_assignment1.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="mobileapptaylors.example.vegnish.MAD_assignment1.Announcement"
            android:label="Announcements" />
        <activity android:name="mobileapptaylors.example.vegnish.MAD_assignment1.HistorySlots" />

        <activity android:name="mobileapptaylors.example.vegnish.MAD_assignment1.Welcome"></activity>
    </application>

</manifest>