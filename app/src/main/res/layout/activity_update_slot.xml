<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="mobileapptaylors.example.vegnish.MAD_assignment1.updateSlot"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/updateSlotsButton"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:background="@color/colorPrimary"
        android:text="Update Slot"
        android:textColor="@color/colorFontWhite"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:layout_marginBottom="42dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/update_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        app:srcCompat="@drawable/ic_date_range_black_24dp" />

    <EditText
        android:id="@+id/update_date"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Date"
        android:inputType="date"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/update_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView9"
        app:layout_constraintEnd_toStartOf="@+id/update_time"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_access_time_black_24dp" />

    <EditText
        android:id="@+id/update_time"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="31dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Start Time"
        android:inputType="time"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/update_time_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3" />

    <EditText
        android:id="@+id/update_time_end"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:focusable="false"
        android:hint="End Time"
        android:inputType="time"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/update_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView9" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toStartOf="@+id/update_location"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_location_on_black_24dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/updateSlotsButton"
        app:layout_constraintEnd_toStartOf="@+id/update_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <Spinner
        android:id="@+id/update_spinner"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="54dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/updateSlotsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView5" />

    <EditText
        android:id="@+id/update_location"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="31dp"
        android:ems="10"
        android:hint="Location"
        android:inputType="text|textCapCharacters"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/update_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/update_time_end"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_timelapse_black_24dp" />


</android.support.constraint.ConstraintLayout>