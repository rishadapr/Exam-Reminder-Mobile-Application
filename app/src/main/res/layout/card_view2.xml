<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:style="@style/CardView"
    android:id="@+id/card_view2"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    >


    <android.support.constraint.ConstraintLayout
        android:id="@+id/card_constraint_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="@+id/role_text"
        app:layout_constraintStart_toEndOf="@+id/role_text">

        <TextView
            android:id="@+id/date"
            android:layout_width="179dp"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="25th July 2018"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <View
            android:id="@+id/color_bar"
            android:layout_width="22dp"
            android:layout_height="129dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="309dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/viewMenu"
            app:layout_constraintHorizontal_bias="0.006"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginBottom="28dp"
            android:layout_marginStart="12dp"
            android:text="2.00pm"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/role_text"
            app:layout_constraintStart_toEndOf="@+id/imageView6" />


        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginBottom="28dp"
            android:layout_marginStart="8dp"
            android:text="to"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/role_text"
            app:layout_constraintStart_toEndOf="@+id/time" />

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginBottom="28dp"
            android:layout_marginStart="12dp"
            android:text="2.00pm"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/role_text"
            app:layout_constraintStart_toEndOf="@+id/to" />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="62dp"
            android:text="LT 5"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView8" />


        <TextView
            android:id="@+id/role_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="Chief Invigilator"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.164"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.855" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.336"
            app:srcCompat="@drawable/ic_access_time_black_24dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintEnd_toStartOf="@+id/location_text"
            app:layout_constraintStart_toEndOf="@+id/date"
            app:layout_constraintTop_toTopOf="@+id/time"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_location_on_black_24dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_person_black_24dp" />

        <ImageButton
            android:id="@+id/viewMenu"
            style="@android:style/Widget.ImageButton"
            android:layout_width="39dp"
            android:layout_height="32dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.805"
            app:layout_constraintStart_toEndOf="@+id/date"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />

    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>